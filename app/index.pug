doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title teslaRoadster
		link(rel="stylesheet", href="./css/slick.css")
		link(rel="stylesheet", href="./css/style.min.css")
	body
		header.header
			.container
				.header__inner
					.header__top
						.logo
							a.logo(href='/')
								picture.logo__img
									source(srcset="../images/logo.svg" alt="logo")
									img(src="../images/logo.png" alt="logo")
						
						.header__burger
							.burger__line
							.burger__line
							.burger__line
					
					.header__content
						h1.content__title Roadster
						p.content__text Самый быстрый автомобиль в мире, с рекордным ускорением, дальностью и производительностью.
						a.content__btn(href='#!') Хочу тест драйв

		section.slider__top
			.slider
				.slider__item(style="background-image: url(../images/slide-1.jpg);")
				.slider__item(style="background-image: url(../images/slide-2.jpg);")
				.slider__item(style="background-image: url(../images/slide-3.jpg);")

		section.statistics
			.container
				.statistics__items
					.statistics__item
						.item__title Двигатель
						.item__num 2,1
							span сек
						.item__descr разгон до 100 км
					.statistics__item
						.item__title Батарея
						.item__num 1000
							span км
						.item__descr запас хода
					.statistics__item
						.item__title Скорость
						.item__num.item__num--plus 400
							span км/ч
						.item__descr макс скорость

		script(src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous")
		script(src="./js/slick.min.js")
		script(src="./js/libs.min.js")
		script(src="./js/main.js")
